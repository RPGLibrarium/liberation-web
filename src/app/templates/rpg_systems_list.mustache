<section>
  <h1>Systemliste</h1>
  <table class="wushing fancytbl {{#_editable}}editable {{/_editable}}systems">
    <thead>
      <tr>
        <th>System</th>
        <th>Kürzel</th>
        {{#_editable}}
        {{% TODO: more fine grained control ... %}}
        <th class="menucol"/>
        {{/_editable}}
      </tr>
    </thead>
    <tbody>
      {{#rpgsystems}}
        <tr data-rpgsystemId="{{id}}">
          <td>
              <span class="value-text" data-name="name">{{name}}</span>
              {{#_editable}}<input class="value-form" name="name" type="text" value="{{name}}"/>{{/_editable}}
          </td>
          <td>
              <span class="value-text" data-name="shortname">{{shortname}}</span>
              {{#_editable}}<input class="value-form" name="shortname" type="text" value="{{shortname}}"/>{{/_editable}}
          </td>
          {{#_editable}}
          <td class="menucol">
            <div class="rowmenu">
              <button type="button" title="Bearbeiten" value="edit" class="rowbutton"><i class="fa-solid fa-pencil"></i></button>
              <button type="button" title="Löschen" value="delete" class="rowbutton red"><i class="fa-solid fa-trash"></i></button>
              <button type="button" title="Speichern" value="save" class="rowbutton"><i class="fa-solid fa-floppy-disk"></i></button>
              <button type="button" title="Abbrechen" value="abort" class="rowbutton"><i class="fa-solid fa-rotate-left"></i></button>
            </div>
          </td>
          {{/_editable}}
        </tr>
      {{/rpgsystems}}
    </tbody>
  </table>
</section>
